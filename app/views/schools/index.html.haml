.page-header
  = link_to new_school_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New School
  %h1 Listing schools

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @schools.each do |school|
        %tr
          %td= school.name
          %td= link_to 'Show', school
          %td= link_to 'Edit', edit_school_path(school)
          %td= link_to 'Destroy', school, :data => { confirm: 'Are you sure?' }, :method => :delete
