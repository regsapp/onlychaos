.page-header
  = link_to new_user_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New User
  %h1 Listing users

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Email
        %th First name
        %th Last name
        %th Birthday
        %th School
        %th Sign in count
        %th Current sign in at
        %th Last sign in at
        %th Type
        %th
        %th
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td= user.first_name
          %td= user.last_name
          - if user.is_a? Student
            %td= user.birthday
            %td= user.school.name
          - else
            %td
            %td
          %td= user.sign_in_count
          %td= user.current_sign_in_at
          %td= user.last_sign_in_at
          %td= user.type
          %td= link_to 'Show', user_path(user)
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user_path(user), :data => { confirm: 'Are you sure?' }, :method => :delete
