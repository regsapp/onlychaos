<%= bootstrap_devise_error_messages! %>
<section class="form">
  <h2><%= t('.change_your_password', :default => 'Change your password') %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-object">
      <%= f.password_field :password, autofocus: true, placeholder: 'new password'  %>
    </div>

    <div class="form-object">
      <%= f.password_field :password_confirmation, placeholder: 'confirm new password' %>
    </div>
    <br/>
    <%= f.submit t('.change_my_password', :default => 'Change my password'), class: "btn btn-primary" %>
  <% end %>

</section>
