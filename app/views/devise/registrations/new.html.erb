<%= bootstrap_devise_error_messages! %>
<section class='form'>
  <h2>Improve your physics AS/A2 grades</h2>
  <p>Self marking revision past papers</p>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
    <div class="form-object">
      <%= f.text_field :first_name, autofocus: true, placeholder: 'first name' %>
    </div>
    <div class="form-object">
      <%= f.text_field :last_name, autofocus: true, placeholder: 'family name' %>
    </div>
    <div class="form-object">
      <%= f.label :birthday, "Date of birth" %>
      <%= f.date_select :birthday, {}, autofocus: true %>
    </div>
    <div class="form-object">
      <!-- <%= f.label :school, "School / College" %> -->
      <%= f.collection_select :school_id, School.all, :id, :name, { prompt: true }, autofocus: true, placeholder: 'school/college' %>
    </div>
    <div class="form-object">
      <%= f.email_field :email, autofocus: true, placeholder: 'school/college email' %>
    </div>
    <div class="form-object">
      <%= f.password_field :password, placeholder: 'password' %>
    </div>
    <div class="form-object">
      <%= f.password_field :password_confirmation, placeholder: 'password confirmation' %>
    </div>
    <%= f.submit "REQUEST INVITE", class: "login button" %>
  <% end %>

  <h4>Already have an account?  <%= link_to 'Login here', new_user_session_path %></h4>
</section>
