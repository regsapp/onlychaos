.page-header
  = link_to new_category_path, :class => 'normal button' do
    %span.glyphicon.glyphicon-plus
    New Category
  %h1 Listing categories

  %p 1 = OCR, 2 = AQA, 3 = Edexcel

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Exam Board
        %th No. of Questions
        %th
        %th
        %th

    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td= category.exam_board_id
          %td= category.questions.count
          %td= link_to 'Show', category
          %td= link_to 'Edit', edit_category_path(category)
          %td= link_to 'Destroy', category, :data => { confirm: 'Are you sure?' }, :method => :delete
