.page-header
  = link_to questions_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_question_path(@question), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show question

%dl.dl-horizontal
  %dt Category:
  %dd= @question.category.name
  %br
  %dt Exam board(s):
  %dd= @question.exam_board_names
  %br
  %dt Description:
  %dd=change_math_delims(@question.description)
  %dt Hint:
  %dd=change_math_delims(@question.hint)
  %hr

%h3 Parts
%ol
  - @question.question_parts.each do |question_part|
    %li.question_parts
    %dl.dl-horizontal
    %dt Description:
    %dd=change_math_delims(question_part.description)
    %br
    %dt Marks:
    %dd= question_part.marks
    %br
    %dt Answer type:
    %dd= question_part.answer_type
    %br
    %dt Correct answer:
    %dd= question_part.correct_answer.content
    %hr
