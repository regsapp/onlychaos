.page-header
  = link_to questions_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_question_path(@question), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show question

%dl.dl-horizontal
  %dt Year group:
  %dd= @question.year_group.name
  %dt Category:
  %dd= @question.category.name
  %dt.question-text Description:
  %dd.question-text=@question.description.html_safe
  %dt Marks:
  %dd= @question.marks
  %dt Answer type:
  %dd= @question.answer_type
  %dt Correct answer:
  %dd= @question.correct_answer.content
